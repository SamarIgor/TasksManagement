@using Microsoft.AspNetCore.Identity
@using task.Models

@inject SignInManager<AccountUser> SignInManager
@inject UserManager<AccountUser> UserManager

<ul class="navbar-nav float-right">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item float-right">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item float-right">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark btn-secondary">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item float-right">
        <a class="nav-link text-dark btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item float-right">
        <a class="nav-link text-dark btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
